<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Orders</title>
    <link rel="stylesheet" href="/stylesheets/order/all.css">
</head>
<body>
<header>
    <h1>All Orders</h1>
</header>
<main>
    <% if (orders.length > 0) { %>
        <table class="order-table">
            <thead>
            <tr>
                <th>Order ID</th>
                <th>Movie Title</th>
                <th>Screening Start Time</th>
                <th>Seats</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Order Date</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order._id %></td>
                    <td><%= order.screening_id.movie_id.title %></td>
                    <td><%= order.screening_id.formattedDate %></td>
                    <td><%= order.seats.join(', ') %></td>
                    <td><%= order.total_amount %></td>
                    <td><%= OrderStatusLabel[order.status] %></td>
                    <td><%= order.formattedDate %></td>
                    <td><a href="/order/detail/<%= order._id %>">View</a></td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No orders found.</p>
    <% } %>
</main>
</body>
</html>
